<Page x:Class="Locana.Pages.EntrancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Locana.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      RequestedTheme="Dark"
      mc:Ignorable="d" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.Resources>
        <CollectionViewSource x:Name="PanelSources" IsSourceGrouped="True" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView x:Name="EntranceGrid"
                  ItemsSource="{Binding Source={StaticResource PanelSources}}"
                  Loaded="EntranceGrid_Loaded"
                  Unloaded="EntranceGrid_Unloaded">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="PanelHolder" Tapped="PanelHolder_Tapped">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="48" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="/Assets/Screen/mode_photo.png" />
                        <TextBlock Grid.Row="1" Text="{Binding PanelTitle}" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid ItemHeight="256"
                                   ItemWidth="256"
                                   Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8,0,0">
                                <TextBlock Padding="8,0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Text="{Binding GroupKey}" />
                            </Grid>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </GridView.GroupStyle>
        </GridView>
    </Grid>
</Page>
