<Page x:Class="Locana.Pages.AppSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="using:Locana.Control"
      xmlns:common="using:Kazyx.Uwpmm.Common"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Locana.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:util="using:Kazyx.Uwpmm.Utility"
      Loaded="Page_Loaded"
      RequestedTheme="Dark"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <c:PageHeader x:Name="pageHeader">
            <c:PageHeader.HeaderContent>
                <TextBlock x:Name="title"
                           Style="{ThemeResource PageTitleTextBlockStyle}"
                           Text="App Settings Page [TBD]" />
            </c:PageHeader.HeaderContent>
        </c:PageHeader>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="AppSettings"
                        MaxWidth="600"
                        Margin="16,10,16,40"
                        VerticalAlignment="Stretch" />
        </ScrollViewer>
    </Grid>
</Page>
