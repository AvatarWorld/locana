<Application x:Class="Locana.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Locana"
             RequestedTheme="Dark">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/StyleResources.xaml" />
                <ResourceDictionary Source="Resources/ShellStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  For PhotoPlaybackScreem.xaml  -->
            <DataTemplate x:Key="DetailInfoTemplate">
                <TextBlock Grid.Row="1"
                           Margin="0,-3"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           FontSize="16"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                           Text="{Binding}"
                           TextWrapping="Wrap" />
            </DataTemplate>

            <local:LocalizedStrings x:Key="LocalizedStrings" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
